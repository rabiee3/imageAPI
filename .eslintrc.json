{
    "env": {
        "es2020": true,
        "node": true,
        "jasmine": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-jasmine"
    ],
    "ignorePatterns": ["src/tests/**/*.ts","dist/tests/**/*.js"],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "import/extensions": [0, "never", {"ignorePackages": true}]
    }
}
