{
    "env": {
        "es2020": true,
        "node": true,
        "jasmine": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-jasmine"
    ],
    "ignorePatterns": ["src/tests/helpers/*.ts","dist/**/*.js"],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "import/extensions": [0, "never", {"ignorePackages": true}],
        "indent": ["error", 4],
        "quotes":"off",
        "no-trailing-spaces":"off"
    },
    "settings": {
        "import/resolver": {
        "node": {
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
        }
    }
}
